{
  "name": "template-electron-vue3",
  "version": "1.0.0",
  "description": "基于 Electron + Vue3 + TypeScript + Less + Vite 技术栈的项目模板",
  "main": "dist-electron/main.js",
  "repository": "git@github.com:NathanCong/template-electron-vue3.git",
  "author": "NathanCong <congyunan@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "serve": "vite",
    "build": "vue-tsc -b && vite build && electron-builder"
  },
  "dependencies": {
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/less": "^3.0.8",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "less": "^4.3.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.2.10"
  },
  "build": {
    "appId": "com.nathancong.tev3",
    "productName": "TemplateElectronVue3",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png"
    }
  }
}
